git config --global user.name not.root
pkgname=gnuradio-git
_gitname=gnuradio
pkgver=v3.8.0.0.734.g912d48596
pkgrel=1
pkgdesc="General purpose DSP and SDR toolkit, with drivers for usrp and fcd."
arch=('i686' 'x86_64')
url="https://github.com/pervices/gnuradio"
license=('GPL')
depends=('libx11' 'fftw' 'python' 'python-numpy' 'python-mako' 'python-click' 'python-click-plugins' 'python-pyqt5' 'cppunit' 'gsl' 'blas' 'guile' 'boost-libs>=1.54' 'libusb' 'portaudio' 'libuhd' 'zeromq' 'libvolk' 'log4cpp')
makedepends=('python-cairo' 'python-yaml' 'glu' 'pybind11' 'python-sphinx' 'cairo' 'qwt' 'swig')
optdepends=('python-lxml: Some GRC modules use lxml optionally for improved performance')
source=("git+https://github.com/pervices/gnuradio.git#branch=add-stream-mode-api-4177")
md5sums=('SKIP')
conflicts=('gnuradio' 'gnuradio-companion')
provides=('gnuradio' 'gnuradio-companion')
_gitbranch='v3.9.0.0'
source=("git://github.com/pervices/gnuradio.git#branch=add-stream-mode-api-4177")
_gitbranch_volk='v3.9.0.0'
pkgver() {
    cd "$srcdir/$_gitname"
    git describe --always | sed 's|-|.|g'
}

build() {
echo export path
    export PYTHON=python3
    cd "$srcdir/$_gitname"
 git submodule init
    git pull --recurse-submodules=on origin $_gitbranch_volk
    git submodule update

    sed -i -e "s|GR_PKG_LIBEXEC_DIR|GR_RUNTIME_DIR|" grc/scripts/freedesktop/CMakeLists.txt
    msg "Starting build."
        cd "$srcdir/$_gitname/"
    mkdir -p build
    cd "$srcdir/$_gitname/build"
    
    pwd
    
    cmake \
          -DPYTHON_EXECUTABLE=/usr/bin/python3 \
          -DCMAKE_BUILD_TYPE=Release \
        -DPYTHON_INCLUDE_DIR=$(echo /usr/include/python3*) \
        -DPYTHON_LIBRARY=$(echo /usr/lib/libpython3.*.so) \
        -DENABLE_GRC=ON \
        -DGR_PYTHON_DIR=/usr/lib/python3.9/site-packages \
        -DENABLE_GR_WXGUI=ON \
        -DENABLE_GR_QTGUI=ON \
        -DENABLE_INTERNAL_VOLK=ON \
        -DCMAKE_INSTALL_PREFIX=/usr \
        -Wno-dev ../

    make -j 5
}

check() {
    cd "$srcdir/$_gitname/build"
    export PYTHON=python3
    #make test
}


package() {
    cd "$srcdir/$_gitname/grc/scripts/freedesktop"
    install -Dm644 gnuradio-grc.desktop "$pkgdir/usr/share/applications/$pkgbase.desktop"
    cd "$srcdir/$_gitname/build"
    make DESTDIR="$pkgdir" install
    find "$pkgdir/" -name '*.pyc' -delete
    find "$pkgdir/" -name '*.pyo' -delete
}


pkgname=gnuradio-git
_gitname=gnuradio
pkgver=v3.8.0.0.734.g912d48596
pkgrel=1
pkgdesc="General purpose DSP and SDR toolkit, with drivers for usrp and fcd."
arch=('i686' 'x86_64')
url="https://github.com/gnuradio/gnuradio"
license=('GPL')
depends=('fftw' 'python2-numpy' 'cppunit' 'gsl' 'blas' 'guile' 'boost-libs>=1.53' 'libusb' 'portaudio' 'libuhd' 'zeromq' 'gmp' 'thrift')
makedepends=('git' 'boost' 'cmake' 'python2-lxml' 'glu' 'swig' 'wxpython')
optdepends=('python-lxml: Some GRC modules use lxml optionally for improved performance')
source=("git+https://github.com/gnuradio/gnuradio.git")
md5sums=('SKIP')
conflicts=('gnuradio' 'gnuradio-companion')
provides=('gnuradio' 'gnuradio-companion')

pkgver() {
    cd "$srcdir/$_gitname"
    git describe --always | sed 's|-|.|g'
}

build() {
    cd "$srcdir/$_gitname"
echo 'export PYTHONPATH=/usr/local/lib/python3/dist-packages:usr/local/lib/python2.7/site-packages:$PYTHONPATH' >> ~/.bashrc
echo 'export LD_LIBRARY_PATH=/user/local/lib:$LD_LIBRARY_PATH' >> ~/.bashrc
echo 'export PYTHONPATH=/usr/local/lib/python3/dist-packages:usr/local/lib/python2.7/site-packages:$PYTHONPATH' >> ~/.profile
echo 'export LD_LIBRARY_PATH=/user/local/lib:$LD_LIBRARY_PATH' >> ~/.profile
    sed -i -e "s|GR_PKG_LIBEXEC_DIR|GR_RUNTIME_DIR|" grc/scripts/freedesktop/CMakeLists.txt
    msg "Starting build."
    mkdir -p build
    cd build
    cmake \
        -DPYTHON_EXECUTABLE=$(which python2) \
        -DPYTHON_INCLUDE_DIR=$(echo /usr/include/python2*) \
        -DPYTHON_LIBRARY=$(echo /usr/lib/libpython2.*.so) \
        -DENABLE_GRC=ON \
        -DENABLE_GR_QTGUI=ON \
        -DENABLE_INTERNAL_VOLK=ON \
        -DENABLE_GR_CTRLPORT=OFF \
        -DCMAKE_INSTALL_PREFIX=/usr \
        -DGR_PYTHON_3=OFF \
        -DQWT_LIBRARIES=/usr/lib/libqwt.so -Wno-dev ../
    make -j4
}


package() {
    cd "$srcdir/$_gitname/grc/scripts/freedesktop"
    install -Dm644 gnuradio-grc.desktop "$pkgdir/usr/share/applications/$pkgbase.desktop"
    cd "$srcdir/$_gitname/build"
    make DESTDIR="$pkgdir" install
    find "$pkgdir/" -name '*.pyc' -delete
    find "$pkgdir/" -name '*.pyo' -delete
}
